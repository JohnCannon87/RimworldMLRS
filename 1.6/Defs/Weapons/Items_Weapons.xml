<Defs>
    <ThingDef ParentName="BaseArtilleryWeapon">
        <defName>MLRSLauncher</defName>
        <label>MLRS Launcher</label>
        <graphicData>
            <texPath>Buildings/MLRS_Turret</texPath>
            <graphicClass>Graphic_Single</graphicClass>
            <drawSize>(3,3)</drawSize>
        </graphicData>
        <description>Long range multiple rocket launch system, designed for area denial and anti-air security.</description>
        <statBases>
            <AccuracyTouch>1.9</AccuracyTouch>
            <AccuracyShort>1.9</AccuracyShort>
            <AccuracyMedium>1.9</AccuracyMedium>
            <AccuracyLong>1.9</AccuracyLong>
            <RangedWeapon_Cooldown>0.66</RangedWeapon_Cooldown>
        </statBases>
        <verbs>
            <li>
                <verbClass>RimworldMLRS.Verb_ShootMLRS</verbClass>
                <forceNormalTimeSpeed>false</forceNormalTimeSpeed>
                <hasStandardCommand>true</hasStandardCommand>
                <defaultProjectile>Bullet_MLRS_Rocket</defaultProjectile>
                <forcedMissRadius>3</forcedMissRadius>
                <forcedMissRadiusClassicMortars>13</forcedMissRadiusClassicMortars>
                <warmupTime>0.66</warmupTime>
                <range>75</range>
                <minRange>29.9</minRange>
                <ticksBetweenBurstShots>30</ticksBetweenBurstShots>
                <burstShotCount>5</burstShotCount>
                <soundCast>Missile_Launch</soundCast>
                <soundCastTail>GunTail_Heavy</soundCastTail>
                <muzzleFlashScale>20</muzzleFlashScale>
                <requireLineOfSight>false</requireLineOfSight>
                <consumeFuelPerShot>1</consumeFuelPerShot>
                <targetParams>
                    <canTargetLocations>true</canTargetLocations>
                </targetParams>
            </li>
        </verbs>
    </ThingDef>
    
</Defs>
